<%= simple_form_for @surveyresponse  do |f| %>

    <%= f.label 'Patient ID' %><br />
    <%= f.select 'id', options_for_select(Procedure.uniq.pluck(:tnumber)) {|p| [p.tnumber, p.tnumber]}, {include_blank: true, default: nil}, {:class => 'select optional form-control'} %>

    <%= f.association :procedure, label: 'Patient ID', prompt: 'Select the patient T-number' %>

    <%= f.association :surveytemplate, :value_method => :id, label: 'Type of questionnaire', prompt: 'Select the questionnaire' %>

    <%= f.input :date, :as => :date_picker, label: 'Completion Date' %>

    <%= f.button :submit , label: 'Continue' %>

<% end %>
