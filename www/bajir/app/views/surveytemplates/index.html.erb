<h1>Listing questionnaires</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Definition</th>
    <th colspan="3"></th>
  </tr>

  <% @surveytemplates.each do |surveytemplate| %>
    <tr>
      <td><%= surveytemplate.name %></td>
      <td><%= surveytemplate.definition %></td>
      <td><%= link_to 'Show', surveytemplate_path(surveytemplate) %></td>
      <td><%= link_to 'Edit', edit_surveytemplate_path(surveytemplate) %></td>
      <td><%= link_to 'Destroy', surveytemplate_path(surveytemplate),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>