<%= simple_form_for @procedure do |f| %>
 
  <%= f.input :tnumber, label: 'Unique Trust Number', required: true, error: 'Trust number is mandatory, please specify one' %>
   <%= f.input :procedureDate, as: :date_picker, label: 'Date',  required: true, error: 'Date is mandatory, please specify one',input_html: {data: {date_options: {
                        defaultDate: '2012/12/25',
                        showClose: true
                }}} %>
  <%= f.button :submit %>
 
<% end %>